@page
@model A01_FuNewsManagement_FE.Pages.Articles.IndexCusModel
@{
    ViewData["Title"] = "Article Management";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        color: #333;
        margin: 0;
        padding: 0 20px;
    }

    .articles-container {
        max-width: 1200px;
        margin: 2rem auto;
    }

    h1.page-title {
        font-weight: 700;
        color: #003366;
        border-bottom: 3px solid #00509e;
        padding-bottom: 10px;
        margin-bottom: 2rem;
    }

    /* Alert styles */
    .alert {
        padding: 15px 20px;
        border-radius: 6px;
        margin-bottom: 20px;
        font-weight: 600;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    /* Search bar */
    .search-container {
        display: flex;
        gap: 15px;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        background: white;
        padding: 15px 20px;
        border-radius: 8px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
    }

    .search-input,
    .search-dropdown {
        font-size: 1rem;
        padding: 10px 15px;
        border: 1.5px solid #ced4da;
        border-radius: 6px;
        transition: all 0.3s ease;
        min-width: 200px;
    }

        .search-input:focus,
        .search-dropdown:focus {
            border-color: #00509e;
            box-shadow: 0 0 8px rgba(0, 80, 158, 0.4);
            outline: none;
        }

    .search-btn {
        background: linear-gradient(90deg, #00509e, #003366);
        color: white;
        font-weight: 600;
        border: none;
        padding: 11px 25px;
        border-radius: 6px;
        cursor: pointer;
        box-shadow: 0 3px 8px rgba(0, 80, 158, 0.6);
        transition: background 0.3s ease, transform 0.3s ease;
        white-space: nowrap;
    }

        .search-btn:hover {
            background: linear-gradient(90deg, #003366, #001f3f);
            transform: translateY(-2px);
        }

    .clear-btn {
        background: none;
        border: none;
        color: #00509e;
        font-weight: 600;
        cursor: pointer;
        padding: 10px;
        transition: color 0.2s ease;
    }

        .clear-btn:hover {
            color: #00264d;
            text-decoration: underline;
        }

    /* Articles grid */
    .articles-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
        gap: 25px;
    }

    .article-card {
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
        padding: 25px 20px 30px;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        cursor: pointer;
        border: 1px solid transparent;
    }

        .article-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 16px 32px rgba(0, 0, 0, 0.16);
            border-color: #00509e;
        }

    .article-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 12px;
    }

    .article-title {
        font-size: 1.35rem;
        font-weight: 700;
        color: #003366;
        margin: 0;
        flex: 1;
        line-height: 1.2;
    }

    .article-headline {
        font-size: 1.05rem;
        color: #555;
        margin: 12px 0 18px;
        line-height: 1.4;
        min-height: 48px;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
    }

    .article-meta {
        font-size: 0.9rem;
        color: #666;
        line-height: 1.5;
        border-top: 1px solid #e9ecef;
        padding-top: 14px;
        font-style: italic;
    }

        .article-meta span {
            display: block;
            margin-bottom: 5px;
        }

    /* Status label */
    .status-label {
        padding: 6px 14px;
        border-radius: 15px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        white-space: nowrap;
        user-select: none;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .status-draft {
        background-color: #e2e3e5;
        color: #6c757d;
        border: 1px solid #d6d8db;
    }

    .status-published {
        background-color: #c3e6cb;
        color: #155724;
        border: 1px solid #b1dfbb;
    }


    /* Search bar styling */
    .search-container {
        display: flex;
        gap: 15px;
        align-items: center;
        margin-bottom: 1.5rem;
        flex-wrap: wrap;
    }

    .search-input {
        flex: 1;
        padding: 10px 15px;
        border: 1px solid #ced4da;
        border-radius: 5px;
        font-size: 1rem;
        min-width: 250px;
        transition: border-color 0.3s ease;
    }

        .search-input:focus {
            outline: none;
            border-color: #1E3C72;
            box-shadow: 0 0 5px rgba(30, 60, 114, 0.2);
        }

    .search-dropdown {
        padding: 10px 15px;
        border: 1px solid #ced4da;
        border-radius: 5px;
        font-size: 1rem;
        background-color: white;
        color: #1E3C72;
        transition: border-color 0.3s ease;
    }

        .search-dropdown:focus {
            outline: none;
            border-color: #1E3C72;
            box-shadow: 0 0 5px rgba(30, 60, 114, 0.2);
        }

    .search-btn {
        background: linear-gradient(to right, #1E3C72, #2A5298);
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .search-btn:hover {
            box-shadow: 0 5px 15px rgba(30, 60, 114, 0.4);
            transform: translateY(-2px);
        }

    .clear-btn {
        background: none;
        border: none;
        color: #1E3C72;
        font-weight: 500;
        cursor: pointer;
        transition: color 0.2s ease;
    }

        .clear-btn:hover {
            color: #2A5298;
            text-decoration: underline;
        }
</style>

<div class="articles-container">
    <h1 class="page-title">Article Management</h1>

    <!-- Display Success/Error Messages -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success" role="alert">
            @Model.SuccessMessage
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }

    <!-- Search Bar -->
    <form class="search-container" method="get">
        <input type="text" class="search-input" placeholder="Tìm kiếm bài viết..." name="searchString" value="@Model.SearchString" />
        <select class="search-dropdown" name="categoryFilter">
            <option value="">Tất cả danh mục</option>
            @foreach (var category in Model.Categories)
            {
                @if (Model.CategoryFilter == category.CategoryId.ToString())
                {
                    <option value="@category.CategoryId" selected>@category.CategoryName</option>
                }
                else
                {
                    <option value="@category.CategoryId">@category.CategoryName</option>
                }
            }
        </select>
        @* <select class="search-dropdown" name="statusFilter"> *@
        @*     <option value="">Tất cả trạng thái</option> *@
        @*     @if (Model.StatusFilter == "Draft") *@
        @*     { *@
        @*         <option value="Draft" selected>Draft</option> *@
        @*     } *@
        @*     else *@
        @*     { *@
        @*         <option value="Draft">Draft</option> *@
        @*     } *@
        @*     @if (Model.StatusFilter == "Published") *@
        @*     { *@
        @*         <option value="Published" selected>Published</option> *@
        @*     } *@
        @*     else *@
        @*     { *@
        @*         <option value="Published">Published</option> *@
        @*     } *@
        @* </select> *@
        <button type="submit" class="search-btn">Tìm kiếm</button>
        <button type="button" class="clear-btn" onclick="window.location.href='/Articles/IndexCus'">Xóa bộ lọc</button>
    </form>

    <div class="articles-grid">
        @if (Model.Articles != null && Model.Articles.Any())
        {
            @foreach (var item in Model.Articles.Where(a => a.Status == "Published"))
            {
                var category = Model.Categories.FirstOrDefault(c => c.CategoryId == item.CategoryId);
                <div class="article-card">
                    <div class="article-header">
                        <h3 class="article-title">@item.Title</h3>
                        @* <span class="status-label status-@item.Status.ToLower()">@item.Status</span> *@
                    </div>
                    <p class="article-headline">@item.Headline</p>
                    <div class="article-meta">
                        <span><strong>Danh mục:</strong> @(category?.CategoryName ?? "N/A")</span><br />
                        <span><strong>Tạo lúc:</strong> @item.CreatedAt?.ToString("dd/MM/yyyy")</span><br />
                        <span><strong>Chỉnh sửa:</strong> @item.ModifiedAt?.ToString("dd/MM/yyyy") ?? "N/A"</span>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-center">Không có bài viết nào.</p>
        }
    </div>

</div>
