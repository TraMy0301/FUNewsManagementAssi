@page
@model A01_FuNewsManagement_FE.Pages.Articles.IndexCusModel
@{
    ViewData["Title"] = "Article Management";
}

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
        color: #333;
        margin: 0;
        padding: 0 20px;
    }

    .articles-container {
        max-width: 1200px;
        margin: 2rem auto;
    }

    h1.page-title {
        font-weight: 700;
        color: #003366;
        border-bottom: 3px solid #00509e;
        padding-bottom: 10px;
        margin-bottom: 2rem;
    }

    /* Alert styles */
    .alert {
        padding: 15px 20px;
        border-radius: 6px;
        margin-bottom: 20px;
        font-weight: 600;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border: 1px solid #f5c6cb;
    }

    /* Search bar */
    .search-container {
        display: flex;
        gap: 15px;
        align-items: center;
        margin-bottom: 2rem;
        flex-wrap: wrap;
        background: white;
        padding: 15px 20px;
        border-radius: 8px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.06);
    }

    .search-input,
    .search-dropdown {
        font-size: 1rem;
        padding: 10px 15px;
        border: 1.5px solid #ced4da;
        border-radius: 6px;
        transition: all 0.3s ease;
        min-width: 200px;
    }

        .search-input:focus,
        .search-dropdown:focus {
            border-color: #00509e;
            box-shadow: 0 0 8px rgba(0, 80, 158, 0.4);
            outline: none;
        }

    .search-btn {
        background: linear-gradient(90deg, #00509e, #003366);
        color: white;
        font-weight: 600;
        border: none;
        padding: 11px 25px;
        border-radius: 6px;
        cursor: pointer;
        box-shadow: 0 3px 8px rgba(0, 80, 158, 0.6);
        transition: background 0.3s ease, transform 0.3s ease;
        white-space: nowrap;
    }

        .search-btn:hover {
            background: linear-gradient(90deg, #003366, #001f3f);
            transform: translateY(-2px);
        }

    .clear-btn {
        background: none;
        border: none;
        color: #00509e;
        font-weight: 600;
        cursor: pointer;
        padding: 10px;
        transition: color 0.2s ease;
    }

        .clear-btn:hover {
            color: #00264d;
            text-decoration: underline;
        }

    /* Articles grid */
    .articles-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 1.5rem;
        padding: 2rem;
    }

    .article-card {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        display: flex;
        flex-direction: column;
        transition: transform 0.2s ease-in-out;
    }

        .article-card:hover {
            transform: translateY(-5px);
        }

    .article-header img {
        width: 100%;
        height: 180px;
        object-fit: cover;
    }

    .article-header {
        padding: 1rem;
        padding-bottom: 0;
    }

    .article-title {
        font-size: 1.25rem;
        font-weight: bold;
        margin: 0.5rem 0;
    }

    .status-label {
        padding: 0.3rem 0.6rem;
        border-radius: 999px;
        font-size: 0.8rem;
        color: white;
        display: inline-block;
    }

    .status-pending {
        background-color: orange;
    }

    .status-active {
        background-color: green;
    }

    .status-inactive {
        background-color: gray;
    }

    .article-headline {
        padding: 0 1rem;
        font-style: italic;
        color: #444;
    }

    .article-meta {
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
        color: #666;
    }

    .action-links {
        padding: 0.75rem 1rem;
        border-top: 1px solid #eee;
        margin-top: auto;
    }

        .action-links a, .action-links button {
            text-decoration: none;
            margin-right: 10px;
            color: #007bff;
        }

        .action-links button {
            background: none;
            border: none;
            cursor: pointer;
        }

    .text-center {
        text-align: center;
        font-size: 1.1rem;
        color: #888;
        padding: 2rem 0;
    }

    /* Status label */
    .status-label {
        padding: 6px 14px;
        border-radius: 15px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        white-space: nowrap;
        user-select: none;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .status-draft {
        background-color: #e2e3e5;
        color: #6c757d;
        border: 1px solid #d6d8db;
    }

    .status-published {
        background-color: #c3e6cb;
        color: #155724;
        border: 1px solid #b1dfbb;
    }


    /* Search bar styling */
    .search-container {
        display: flex;
        gap: 15px;
        align-items: center;
        margin-bottom: 1.5rem;
        flex-wrap: wrap;
    }

    .search-input {
        flex: 1;
        padding: 10px 15px;
        border: 1px solid #ced4da;
        border-radius: 5px;
        font-size: 1rem;
        min-width: 250px;
        transition: border-color 0.3s ease;
    }

        .search-input:focus {
            outline: none;
            border-color: #1E3C72;
            box-shadow: 0 0 5px rgba(30, 60, 114, 0.2);
        }

    .search-dropdown {
        padding: 10px 15px;
        border: 1px solid #ced4da;
        border-radius: 5px;
        font-size: 1rem;
        background-color: white;
        color: #1E3C72;
        transition: border-color 0.3s ease;
    }

        .search-dropdown:focus {
            outline: none;
            border-color: #1E3C72;
            box-shadow: 0 0 5px rgba(30, 60, 114, 0.2);
        }

    .search-btn {
        background: linear-gradient(to right, #1E3C72, #2A5298);
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
    }

        .search-btn:hover {
            box-shadow: 0 5px 15px rgba(30, 60, 114, 0.4);
            transform: translateY(-2px);
        }

    .clear-btn {
        background: none;
        border: none;
        color: #1E3C72;
        font-weight: 500;
        cursor: pointer;
        transition: color 0.2s ease;
    }

        .clear-btn:hover {
            color: #2A5298;
            text-decoration: underline;
        }

    .action-links a {
        color: #00509e;
        text-decoration: none;
        margin-right: 10px;
        font-weight: 600;
    }

        .action-links a:hover {
            text-decoration: underline;
        }

    .article-image {
        width: 100%;
        height: 180px;
        object-fit: cover;
        border-radius: 8px;
        margin-bottom: 15px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.1);
    }

    .btn-detail {
        display: inline-block;
        padding: 0.4rem 0.9rem;
        background-color: #007bff;
        color: white;
        font-size: 0.9rem;
        border-radius: 6px;
        text-decoration: none;
        transition: background-color 0.2s ease-in-out;
    }

        .btn-detail:hover {
            background-color: #0056b3;
        }

    .badge {
        display: inline-block;
        padding: 0.25em 0.5em;
        font-size: 0.75rem;
        background-color: #6c757d;
        color: #fff;
        border-radius: 0.25rem;
    }


</style>

<div class="articles-container">
    <h1 class="page-title">Article Management</h1>

    <!-- Display Success/Error Messages -->
    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success" role="alert">
            @Model.SuccessMessage
        </div>
    }
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @Model.ErrorMessage
        </div>
    }

    <!-- Search Bar -->
    <form class="search-container" method="get">
        <input type="text" class="search-input" placeholder="Tìm kiếm bài viết..." name="searchString" value="@Model.SearchString" />
        <select class="search-dropdown" name="categoryFilter">
            <option value="">Tất cả danh mục</option>
            @foreach (var category in Model.Categories)
            {
                @if (Model.CategoryFilter == category.CategoryId.ToString())
                {
                    <option value="@category.CategoryId" selected>@category.CategoryName</option>
                }
                else
                {
                    <option value="@category.CategoryId">@category.CategoryName</option>
                }
            }
        </select>
        @* <select class="search-dropdown" name="statusFilter"> *@
        @*     <option value="">Tất cả trạng thái</option> *@
        @*     @if (Model.StatusFilter == "Draft") *@
        @*     { *@
        @*         <option value="Draft" selected>Draft</option> *@
        @*     } *@
        @*     else *@
        @*     { *@
        @*         <option value="Draft">Draft</option> *@
        @*     } *@
        @*     @if (Model.StatusFilter == "Published") *@
        @*     { *@
        @*         <option value="Published" selected>Published</option> *@
        @*     } *@
        @*     else *@
        @*     { *@
        @*         <option value="Published">Published</option> *@
        @*     } *@
        @* </select> *@
        <button type="submit" class="search-btn">Tìm kiếm</button>
        <button type="button" class="clear-btn" onclick="window.location.href='/Articles/IndexCus'">Xóa bộ lọc</button>
    </form>

    <div class="articles-grid">
        @if (Model.Articles != null && Model.Articles.Any())
        {
            @foreach (var item in Model.Articles.Where(a => a.Status == "Published"))
            {
                var category = Model.Categories.FirstOrDefault(c => c.CategoryId == item.CategoryId);
                <div class="article-card">
                    <div class="article-header">
                        <img src="@item.ImageURL"></img>
                        <h3 class="article-title">@item.Title</h3>
                        @* <span class="status-label status-@item.Status.ToLower()">@item.Status</span> *@
                    </div>
                    <p class="article-headline">@item.Headline</p>
                    <p class="article-headline">
                        <strong>Tags:</strong>
                        @foreach (var tag in item.Tags)
                        {
                            <span class="badge badge-secondary" style="margin-right: 5px; clo">@tag.TagName</span>
                        }
                    </p>
                    <div class="article-meta">
                        <span><strong>Danh mục:</strong> @(category?.CategoryName ?? "N/A")</span><br />
                        <span><strong>Tạo lúc:</strong> @item.CreatedAt?.ToString("dd/MM/yyyy")</span><br />
                    </div>
                    <div class="action-links" style="margin-top: 15px; font-size: 0.9rem;">
                        <a asp-page="./Details" asp-route-id="@item.ArticleId" class="btn-detail">🔍 Xem chi tiết</a>

                        
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-center">Không có bài viết nào.</p>
        }
    </div>

</div>
